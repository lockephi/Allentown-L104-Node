### Copy this file to `.env` and fill in real secrets. Do NOT commit `.env`.
# Example environment variables for Allentown L104 Node

# API Keys
AIzaSyArVYGrkGLh7r1UEupBxXyHS-j-AVioh5U=your-gemini-api-key-here
GITHUB_TOKEN=your-github-token-here

# Repository Configuration
GITHUB_REPO=lockephi/Allentown-L104-Node

# Gemini API Configuration
GEMINI_API_BASE=https://generativelanguage.googleapis.com/v1beta
GEMINI_ENDPOINT=:streamGenerateContent

# Model Rotation (automatically rotates on 429 quota errors)
GEMINI_MODEL_1=gemini-3-flash-preview
GEMINI_MODEL_2=gemini-2.5-flash-lite
GEMINI_MODEL_3=gemini-1.5-flash

# Node Configuration
SELF_BASE_URL=http://127.0.0.1:8081
SELF_DATASET=data/stream_prompts.jsonl
SELF_LEARN_DATASET=data/stream_prompts.jsonl
SELF_LEARN_INTERVAL=900

# Rate Limiting
RATE_LIMIT_MIN=20
RATE_LIMIT_MAX=100
DISABLE_RATE_LIMIT=0

# Responder Configuration
DEFAULT_RESPONDER=gemini
RESPONDER_ALLOWLIST=gemini,fake,template,echo

# Features
ENABLE_FAKE_GEMINI=1
ENABLE_SELF_LEARN=1
ENABLE_WATCHDOG=0
WATCHDOG_EXIT_ON_FAILURE=1
WATCHDOG_INTERVAL=30
WATCHDOG_FAILURE_THRESHOLD=3

# Maintenance
MAINTENANCE_INTERVAL=3600
LOG_MAX_BYTES=5000000
MEMORY_DB_PATH=memory.db
